#!/bin/bash -eu

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

export PATH=/var/vcap/packages/python3/bin:$PATH


mkdir -p ${BOSH_INSTALL_TARGET}/vendor
cd ${BOSH_COMPILE_TARGET}/monitor_redis_slave
tar xzvf check_redis_slave.tgz
cp -a ./* ${BOSH_INSTALL_TARGET}/vendor


source /var/vcap/packages/python-2.7/bosh/compile.env
pip install --no-index --find-links /var/vcap/packages/monitor_redis_slave/vendor --install-option="--prefix=/var/vcap/packages/monitor_redis_slave/vendor" redis
